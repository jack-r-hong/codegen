// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

{{#each schemas as |d|}}
    {{#if (equal "database" d.description)}}
model {{fpc @key}} {
        {{#each d.properties as |d2|}}
            {{~#if d2.$ref}}
            {{else}}
    {{@key}} 
                {{~#if d2.nullable }}
    {{parameter_type d2.type "schema" d2.format}}?
                {{~else}}
    {{parameter_type d2.type "schema" d2.format}}
                {{~/if}}       
                {{~#if "1" }}
    {{ref d2.$ref}} 
                {{~else}}

                {{~/if}}       
                {{~#if "1" }}
    {{id_default @key d2.format}}
                {{~else}}

                {{~/if}}                              
                {{~#if d2.uniqueItems }}
    @unique
                {{~else}}

                {{~/if}}   
                {{~#if d2.default }} 
    @default({{d2.default}})
                {{~else}}
                
                {{~/if}}                  
                {{~#if (equal @key "createdAt") }} 
    @default(now())
                {{~else}}
                {{~/if}}  
                {{~#if (equal @key "updatedAt") }} 
    @default(now()) @updatedAt
                {{~else}}

                {{~/if}} 
    @map("{{snake_case @key}}")                 
            {{/if}}
        {{~/each}}  
    {{/if}}
    {{foreign_key @key }}
    // custom begin {{@key}}
{{lookup ../custom @key}}
    // custom end {{@key}}
}
{{/each}}



