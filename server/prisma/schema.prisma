generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  password  String
  auth      Auth     @relation(fields: [authLevel], references: [authLevel])   
  authLevel    Int

  

}

model Auth {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  authLevel Int      @unique
  detail1   Int
  user      User? 

}



